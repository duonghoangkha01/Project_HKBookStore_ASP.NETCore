@model HomeViewModel
@using HKBookStore.ViewModels.Catalog.Products;
@{
    ViewData["Title"] = "Home Page";
}

<!-- Slides Start -->
<div class="row justify-content-md-center border-top px-xl-5">
    <div class="col-3"></div>
    <div id="header-carousel" class="carousel slide col-9" data-ride="carousel">
        <div class="carousel-inner">
            @for (int index = 0; index < Model.Slides.Count; index++)
            {
                var slide = Model.Slides[index];

                <div class="carousel-item @((index==0) ? "active" : "")" style="height: 410px;">
                    <img class="img-fluid" src="@slide.Image" alt="@slide.Name">
                    @*<div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                        <div class="p-3" style="max-width: 700px;">
                            <h4 class="text-light text-uppercase font-weight-medium mb-3">@slide.Name</h4>
                            <h3 class="display-4 text-white font-weight-semi-bold mb-4">@slide.Description</h3>
                            <a href="@slide.Url" class="btn btn-light py-2 px-3">Mua ngay</a>
                        </div>
                    </div>*@
                </div>
                <a class="carousel-control-prev" href="#header-carousel" data-slide="prev">
                    <div class="btn btn-dark" style="width: 45px; height: 45px;">
                        <span class="carousel-control-prev-icon mb-n2"></span>
                    </div>
                </a>
                <a class="carousel-control-next" href="#header-carousel" data-slide="next">
                    <div class="btn btn-dark" style="width: 45px; height: 45px;">
                        <span class="carousel-control-next-icon mb-n2"></span>
                    </div>
                </a>
            }
        </div>
    </div>
</div>
<!-- Slides End -->

<!-- Featured Start -->
<div class="container-fluid pt-5">
    <div class="row px-xl-5 pb-3">
        <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
            <div class="d-flex align-items-center border mb-4" style="padding: 30px;">
                <h1 class="fa fa-check text-primary m-0 mr-3"></h1>
                <h5 class="font-weight-semi-bold m-0">Chất lượng sách</h5>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
            <div class="d-flex align-items-center border mb-4" style="padding: 30px;">
                <h1 class="fa fa-shipping-fast text-primary m-0 mr-2"></h1>
                <h5 class="font-weight-semi-bold m-0">Miễn phí giao hàng</h5>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
            <div class="d-flex align-items-center border mb-4" style="padding: 30px;">
                <h1 class="fas fa-exchange-alt text-primary m-0 mr-3"></h1>
                <h5 class="font-weight-semi-bold m-0">3 ngày hoàn trả</h5>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
            <div class="d-flex align-items-center border mb-4" style="padding: 30px;">
                <h1 class="fa fa-phone-volume text-primary m-0 mr-3"></h1>
                <h5 class="font-weight-semi-bold m-0">Hỗ trợ 24/7</h5>
            </div>
        </div>
    </div>
</div>
<!-- Featured End -->

<!-- Products Start -->
<div class="container-fluid pt-5">
    <div class="text-center mb-4">
        <h2 class="section-title px-5"><span class="px-2">Sách Nổi Bật</span></h2>
    </div>
    <div class="row px-xl-5 pb-3">
        @{
            List<List<ProductViewModel>> featuredProducts = new List<List<ProductViewModel>>();
            List<ProductViewModel> featuredPart = new List<ProductViewModel>();
            var info = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");
            @inject Microsoft.Extensions.Configuration.IConfiguration Configuration;
        }
        @for (int index = 0; index < Model.FeaturedProducts.Count; index++)
        {
            featuredPart.Add(Model.FeaturedProducts[index]);
            if (featuredPart.Count < 4)
            {
                featuredProducts.Add(featuredPart);
                featuredPart = new List<ProductViewModel>();
            }
        }
        
        @for (int index = 0; index < featuredProducts.Count; index++)
        {
            @foreach (var item in featuredProducts[index])
            {
                <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
                    <div class="card product-item border-0 mb-4">
                        <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
                            <img class="img-fluid" src="@(Configuration["BaseAddress"] + @item.ThumbnailImage)" alt="@item.Name">
                        </div>
                        <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                            <h6 class="text-truncate mb-3">@item.Name</h6>
                            <div class="d-flex justify-content-center">
                                <h6>@String.Format(info, "{0:c}", item.Price)</h6><h6 class="text-muted ml-2"><del>@String.Format(info, "{0:c}", item.OriginalPrice)</del></h6>
                            </div>
                        </div>
                        <div class="card-footer d-flex justify-content-between bg-light border">
                            <a href="/product/detail/@item.Id" class="btn btn-sm text-dark p-0"><i class="fas fa-eye text-primary mr-1"></i>Xem chi tiết</a>
                            <a href="" class="btn btn-sm text-dark p-0 btn-add-cart" data-id="@item.Id"><i class="fas fa-shopping-cart text-primary mr-1"></i>Thêm vào giỏ hàng</a>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
<!-- Products End -->

<!-- Products Start -->
<div class="container-fluid pt-5">
    <div class="text-center mb-4">
        <h2 class="section-title px-5"><span class="px-2">Sách Mới Về</span></h2>
    </div>
    <div class="row px-xl-5 pb-3">
        @{
            List<List<ProductViewModel>> latestProducts = new List<List<ProductViewModel>>();
            List<ProductViewModel> latestPart = new List<ProductViewModel>();
        }
        @for (int index = 0; index < Model.LatestProducts.Count; index++)
        {
            latestPart.Add(Model.LatestProducts[index]);
            if (latestPart.Count < 4)
            {
                latestProducts.Add(latestPart);
                latestPart = new List<ProductViewModel>();
            }
        }

        @for (int index = 0; index < latestProducts.Count; index++)
        {
            @foreach (var item in latestProducts[index])
            {
                <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
