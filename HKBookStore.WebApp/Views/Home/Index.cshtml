                        <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
                            <img class="img-fluid" src="@(Configuration["BaseAddress"] + @item.ThumbnailImage)" alt="@item.Name">
                        </div>
                        <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                            <h6 class="text-truncate mb-3">@item.Name</h6>
                            <div class="d-flex justify-content-center">
                                <h6>@String.Format(info, "{0:c}", item.Price)</h6><h6 class="text-muted ml-2"><del>@String.Format(info, "{0:c}", item.OriginalPrice)</del></h6>
                            </div>
                        </div>
                        <div class="card-footer d-flex justify-content-between bg-light border">
                            <a href="/product/detail/@item.Id" class="btn btn-sm text-dark p-0"><i class="fas fa-eye text-primary mr-1"></i>Xem chi tiết</a>
                            <a href="" class="btn btn-sm text-dark p-0 btn-add-cart" data-id="@item.Id"><i class="fas fa-shopping-cart text-primary mr-1"></i>Thêm vào giỏ hàng</a>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
<!-- Products End -->
