@model HKBookStore.ViewModels.System.Users.RegisterRequest
@{
    ViewData["Title"] = "Đăng ký";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<ul class="breadcrumb">
    <li><a href="/">Trang chủ</a> <span class="divider">/</span></li>
    <li class="">Đăng ký</li>
</ul>

<div class="container-fluid bg-secondary">
    <div class="row justify-content-md-center py-4 px-xl-5">
        <div class="col-md-4 col-12 py-1">

            <!-- Pills navs -->
            <ul class="nav nav-pills nav-justified mb-3" id="ex1" role="tablist">
                <li class="nav-item">
                    <a class="nav-link" id="tab-login" href="/Account/Login">Đăng nhập</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link active" id="tab-register" href="#">Đăng ký</a>
                </li>
            </ul>
            <!-- Pills navs -->
            <!-- Pills content -->
            <div class="tab-content">
                <div class="tab-pane fade show active" id="pills-register" role="tabpanel" aria-labelledby="tab-register">
                    <form asp-action="Register" asp-controller="Account" method="post" class="form-horizontal">
                        <div class="text-center mb-3">
                            <p>Đăng ký với:</p>
                            <button type="button" class="btn btn-link btn-floating mx-1">
                                <i class="fab fa-facebook-f"></i>
                            </button>

                            <button type="button" class="btn btn-link btn-floating mx-1">
                                <i class="fab fa-google"></i>
                            </button>

                            <button type="button" class="btn btn-link btn-floating mx-1">
                                <i class="fab fa-twitter"></i>
                            </button>

                            <button type="button" class="btn btn-link btn-floating mx-1">
                                <i class="fab fa-github"></i>
                            </button>
                        </div>

                        <p class="text-center">Hoặc:</p>

                        @*<div asp-validation-summary="All" class="text-error">
                            <button type="button" class="close" data-dismiss="alert">×</button>
                        </div>*@

                        <!-- Name input -->
                        <div class="form-outline mb-4">
                            <label class="form-label" for="registerFirstName">Họ</label>
                            <input type="text" asp-for="FirstName" class="form-control" placeholder="Họ" />
                            <span asp-validation-for="FirstName" class="text-error"></span>
                        </div>

                        <div class="form-outline mb-4">
                            <label class="form-label" for="registerLastName">Tên</label>
                            <input type="text" asp-for="LastName" class="form-control" placeholder="Tên" />
                            <span asp-validation-for="LastName" class="text-error"></span>
                        </div>

                        <div class="form-outline mb-4">
                            <label class="form-label" for="registerDob">Ngày sinh</label>
                            <input type="date" asp-for="Dob" class="form-control" placeholder="Ngày sinh" />
                            <span asp-validation-for="Dob" class="text-error"></span>
                        </div>

                        <!-- Email input -->
                        <div class="form-outline mb-4">
                            <label class="form-label" for="registerEmail">Email</label>
                            <input type="email" asp-for="Email" class="form-control" placeholder="Email" />
                            <span asp-validation-for="Email" class="text-error"></span>
                        </div>

                        <!-- PhoneNumber input -->
                        <div class="form-outline mb-4">
                            <label class="form-label" for="registerPhoneNumber">Số điện thoại</label>
                            <input type="number" asp-for="PhoneNumber" class="form-control" placeholder="PhoneNumber" />
                            <span asp-validation-for="PhoneNumber" class="text-error"></span>
                        </div>

                        <!-- Username input -->
                        <div class="form-outline mb-4">
                            <label class="form-label" for="registerUserName">Tài khoản</label>
                            <input type="text" asp-for="UserName" class="form-control" placeholder="UserName" />
                            <span asp-validation-for="UserName" class="text-error"></span>
                        </div>

                        <!-- Password input -->
                        <div class="form-outline mb-4">
                            <label class="form-label" for="registerPassword">Mật khẩu</label>
                            <input type="password" asp-for="Password" class="form-control" placeholder="Password" />
                            <span asp-validation-for="Password" class="text-error"></span>
                        </div>

                        <!-- Comfirm Password input -->
                        <div class="form-outline mb-4">
                            <label class="form-label" for="registerConfirmPassword">Xác nhận mật khẩu</label>
                            <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="ConfirmPassword" />
                            <span asp-validation-for="ConfirmPassword" class="text-error"></span>
                        </div>

                        <!-- Checkbox -->
                        @*<div class="form-check d-flex justify-content-center mb-4">
                            
                            <label class="form-check-label" for="registerCheck">
                                <input class="form-check-input me-2" type="checkbox" value="" id="registerCheck" checked
                                       aria-describedby="registerCheckHelpText" />
                                I have read and agree to the terms
                            </label>
                        </div>*@

                        <!-- Submit button -->
                        <button type="submit" class="btn btn-primary btn-block mb-3">Đăng ký</button>
                    </form>
                </div>
            </div>
            <!-- Pills content -->
        </div>
    </div>
</div>